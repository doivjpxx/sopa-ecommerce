---
import Input from "../components/astro/base/Input.astro";
import BaseLayout from "../layout/BaseLayout.astro";
---

<BaseLayout>
  <div class="flex justify-center pb-32">
    <div class="flex flex-col items-start gap-6 px-4">
      <p class="text-6xl font-bold mb-12">Create an Account.</p>
      <Input label="Email address" />
      <Input label="Password" />
      <button
        class="flex w-full py-3 px-6 justify-center items-start gap-10 rounded-full bg-black text-white"
        >Create Account</button
      >
      <div>
        <span>Already have an account?</span>
        <a href="/login" class="underline">Sign in</a>
      </div>
    </div>
  </div>
</BaseLayout>
