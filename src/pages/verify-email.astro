---
import Input from "../components/astro/base/Input.astro";
import BaseLayout from "../layout/BaseLayout.astro";
---

<BaseLayout>
  <div class="flex justify-center pb-32">
    <div class="flex flex-col items-start gap-6 px-4">
      <p class="text-6xl font-bold mb-12">Verify Your Email.</p>
      <div class="text-left leading-8">
        <p class="font-bold">Code sent!</p>
        <p>
          We sent a verification code huyphongbn24@gmail.com enter it below.
        </p>
      </div>
      <div class="lg:w-40 flex flex-col gap-6 items-start">
        <Input label="Code" />
        <button
          class="flex w-full py-3 px-6 justify-center items-start gap-10 rounded-full bg-black text-white"
          >Verify</button
        >
        <a href="/create-an-account" class="underline">Edit email</a>
      </div>
    </div>
  </div>
</BaseLayout>
