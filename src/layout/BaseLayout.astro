---
import Footer from "../components/astro/base/Footer.astro";
import Header from "../components/astro/base/Header.astro";
import MainHead from "../components/astro/base/MainHead.astro";
import { MainProps } from "../core/type";
import "../styles/main.css";

interface Props extends MainProps {}

const { title, description, includeFontAwesome, includeGsap } = Astro.props;
---

<html lang="en">
  <MainHead
    title={title}
    description={description}
    includeFontAwesome={includeFontAwesome}
    includeGsap={includeGsap}
  />

  <body>
    <Header />
    <div
      class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16 pt-20 text-center lg:pt-32"
      style=" min-height: calc(100% - 285px);"
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
