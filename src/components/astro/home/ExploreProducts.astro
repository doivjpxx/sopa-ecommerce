const products = [
  {
    id: 1,
    name: "Model 000",
    type: "Black",
    price: 100,
    value: "shoes-model-000",
  },
  {
    id: 2,
    name: "Model 000",
    type: "White",
    price: 100,
    value: "shoes-model-000",
  },
  {
    id: 3,
    name: "Model 000",
    type: "Navy",
    price: 100,
    value: "shoes-model-000",
  },
  {
    id: 4,
    name: "Model 000",
    type: "Gray",
    price: 100,
