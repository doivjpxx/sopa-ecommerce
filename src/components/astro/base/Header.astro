---
const navigationItems = [
  {
    label: "Men",
    url: "#",
  },
  {
    label: "Women",
    url: "#",
  },
  {
    label: "Accessories",
    url: "#",
  },
  {
    label: "About",
    url: "#",
  },
];

const actionItems = [
  {
    label: "Support",
    icon: null,
    url: "#",
  },
  {
    label: "",
    icon: "user",
    url: "#",
  },
  {
    lable: "",
    icon: "cart",
  },
];
---

<div class="fluid">
  <section class="flex justify-center items-center bg-black text-white py-2">
    Free US shipping on order $80+
  </section>
  <nav class="py-4 px-8 md:px-16 lg:px-24">
    <div class="flex justify-between items-center">
      <div><img src="/logo/logo.svg" alt="Logo" width="144" /></div>
      <ul class="hidden md:flex gap-12 items-center">
        {
          navigationItems.map((item) => (
            <li>
              <a href={item.url}>{item.label}</a>
            </li>
          ))
        }
      </ul>
      <ul class="hidden lg:flex gap-4">
        {
          actionItems.map((item) => (
            <li>
              {item.icon ? (
                <img src={`/svgs/${item.icon}.svg`} alt={item.label} />
              ) : (
                item.label
              )}
            </li>
          ))
        }
      </ul>
      <button
        class="block rounded bg-gray-100 p-2.5 text-gray-600 transition hover:text-gray-600/75 md:hidden"
      >
        <span class="sr-only">Toggle menu</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
</div>
